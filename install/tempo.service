[Unit]
Description=Tempo App
After=network-online.target
Wants=network-online.target

[Service]
User=root
RuntimeDirectory=tempo
WorkingDirectory=/run/tempo
ExecStart=/usr/local/bin/tempo
Restart=on-failure
RestartSec=60
KillSignal=SIGINT
StandardOutput=journal
StandardError=journal
CPUQuota=40%
MemoryMax=200M

[Install]
WantedBy=multi-user.target